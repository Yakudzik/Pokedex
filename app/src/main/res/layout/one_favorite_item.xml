<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/one_favorite_item_background"
    android:padding="8dp">

    <TextView
        android:id="@+id/one_fav_item_number_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="@string/pokNumber"
        android:textColor="#E6000000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/one_fav_item_name_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pokeName"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/one_fav_item_number_ID"
        app:layout_constraintRight_toLeftOf="@id/one_fav_item_delete_button_ID"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/one_fav_item_delete_button_ID"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/shape_pokemon_type"
        android:src="@drawable/icon_delete_element"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>